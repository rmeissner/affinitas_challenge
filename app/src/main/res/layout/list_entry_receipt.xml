<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_favorite_border" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/favorite_button"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="Something delicious" />
    </RelativeLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        tools:src="@drawable/ic_favorite_border" />

    <LinearLayout
        android:layout_width="240dp"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rate_1_button"
            style="@style/RateButton"
            app:srcCompat="@drawable/ic_star_border" />

        <ImageView
            android:id="@+id/rate_2_button"
            style="@style/RateButton"
            app:srcCompat="@drawable/ic_star_border" />

        <ImageView
            android:id="@+id/rate_3_button"
            style="@style/RateButton"
            app:srcCompat="@drawable/ic_star_border" />

        <ImageView
            android:id="@+id/rate_4_button"
            style="@style/RateButton"
            app:srcCompat="@drawable/ic_star_border" />

        <ImageView
            android:id="@+id/rate_5_button"
            style="@style/RateButton"
            app:srcCompat="@drawable/ic_star_border" />
    </LinearLayout>
</LinearLayout>